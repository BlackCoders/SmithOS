menuentry "SmithOS" {
	
	function load_video {
		insmod /boot/grub/vbe.mod
		insmod /boot/grub/vga.mod
	}
	if loadfont unicode.pf2 ; then
		set gfxmode=100x100
		load_video
		insmod /boot/grub/gfxterm.mod	
	fi
	terminal_output gfxterm
	insmod /boot/grub/tga.mod
	if background_image /boot/grub/SmithOS.tga; then
	  set color_normal=white/black
	  set color_highlight=black/white
	else
	  set menu_color_normal=cyan/blue
	  set menu_color_highlight=white/blue
	fi
	multiboot /boot/SmithOS.bin
}
